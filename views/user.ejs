<%- include("header") -%>
<style>
body{
	padding: 0 .7rem;
}	
</style>
<p class="px-4 mt-4"><a  class="btn btn-success" href="/">Home</a></p>

<% if (user) { %>
	
	<h2 class="text-center">Hello , <%= user.name %></h2>
	
	<h3 class="px-4">Welcome to check-me</h3>

	<strong class="px-4  text-primary">https/www.check-me.xyz/u/<%= user.name %><strong>

	<div class="px-4 mt-4 d-flex flex-column gap-3">
		<a class="btn btn-warning" href="/messages">View Messages</a>
		<p class="text-center"><a href="/privacy&policy" class="text-muted ">
		privacy and policy </a></p>
	</div>

